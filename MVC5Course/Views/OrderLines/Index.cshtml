@model IEnumerable<MVC5Course.Models.OrderLine>

@{
    ViewBag.Title = "Index";
    Layout = "";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LineTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.OrderStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th></th>
    </tr>

    @using (Html.BeginForm("GetForm","Products"))
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                    @Html.HiddenFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LineTotal)
                    @Html.HiddenFor(modelItem => item.LineTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderStatus)
                    @Html.HiddenFor(modelItem => item.Order.OrderStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                    @Html.HiddenFor(modelItem => item.Product.ProductName)
                </td>

            </tr>
        }
    }

</table>
